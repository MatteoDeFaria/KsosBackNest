// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email    String @unique
  username String @unique
  password String

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model RankedSolo {
  id Int @id @default(autoincrement())

  leagueUser LeagueUser @relation(fields: [summonerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  summonerId String     @unique

  leagueId     String  @unique
  queueType    String
  tier         String
  rank         String
  leaguePoints Int
  wins         Int
  losses       Int
  veteran      Boolean
  inactive     Boolean
  freshBlood   Boolean
  hotStreak    Boolean

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model RankedFlex {
  id Int @id @default(autoincrement())

  leagueUser LeagueUser @relation(fields: [summonerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  summonerId String     @unique

  leagueId     String  @unique
  queueType    String
  tier         String
  rank         String
  leaguePoints Int
  wins         Int
  losses       Int
  veteran      Boolean
  inactive     Boolean
  freshBlood   Boolean
  hotStreak    Boolean

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model LeagueUser {
  id            String      @id @unique
  accountId     String
  puuid         String      @unique
  profileIconId Int
  revisionDate  BigInt
  summonerLevel BigInt
  gameName      String
  tagLine       String
  RankedSolo    RankedSolo?
  RankedFlex    RankedFlex?

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
